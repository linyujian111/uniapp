{

	"easycom": {
		
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
			// uni-ui 规则如下配置
			
		}
	},

	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home",
			"style": {
				"navigationBarTitleText": "首页",
				"usingComponents": {},
				"h5":{
					"pullToRefresh":{
						"color":"#4CD964"
					}
				}
				 
			}

		}, {
			"path": "pages/my",
			"style": {
				"navigationBarTitleText": "个人中心",
				"enablePullDownRefresh": false
				
			}

		}, {
			"path": "pages/category",
			"style": {
				"navigationBarTitleText": "商品分类",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/car",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}

		}

	    
        
        ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "详情页",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	
	
	"globalStyle": {
		//导航栏背景色
		"navigationBarBackgroundColor":"#FFFFFF",  
		
		//导航栏字体颜色
		"navigationBarTextStyle": "black",  
		
		// 导航栏标题内容
		"navigationBarTitleText": "UR",
	
		"backgroundColor": "#FFFFFF",
		
		"enablePullDownRefresh":true,
		
		"backgroundTextStyle":"dark"
	},
	
	"tabBar": {
		"color": "#C0C0C0",
		"selectedColor": "#2979FF",
		"backgroundColor": "white",
		"borderStyle":"black",  //h5无效
		"position":"top",
		//至少包含2个
		"list": [{
				"pagePath": "pages/home",
				"iconPath": "static/images/home1.png",
				"selectedIconPath": "static/images/home2.png",
				"text":"首页"
			}, {
				"pagePath": "pages/category",
				"iconPath": "static/images/type1.png",
				"selectedIconPath": "static/images/type2.png",
					"text":"分类"
			}, {
				"pagePath": "pages/car",
				"iconPath": "static/images/car1.png",
				"selectedIconPath": "static/images/car2.png",
					"text":"购物车"
			}, {
				"pagePath": "pages/my",
				"iconPath": "static/images/my1.png",
				"selectedIconPath": "static/images/my2.png",
					"text":"我的"
			}

		]
	},
	
	// 配置启动模式
	"condition":{
		"current":0,
		"list":[{
			"name":"详情页",
			"path":"pages/detail/detail",
			"query":"id=80"
		}]
	}
}
